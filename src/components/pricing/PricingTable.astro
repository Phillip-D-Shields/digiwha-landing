---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <!-- Header -->
    <div class="mx-auto max-w-4xl text-center mb-16">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">
        Digital Marketing Services
      </h2>
      <p class="mt-6 text-lg leading-8 text-primary-950/70 dark:text-primary-200/70">
        Choose individual services or let us create a custom package that fits your needs and budget. All prices are tailored for Tasman region businesses.
      </p>
    </div>

    <!-- Individual Services Grid -->
    <div class="grid gap-8 lg:grid-cols-2 lg:gap-6 mb-16">
      {
        services.map((service) => (
          <div class="relative flex flex-col gap-6 rounded-3xl p-8 ring-1 ring-primary-900/10 dark:ring-primary-300/10 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg">
            <div class="flex-1">
              <h3 class="text-xl font-medium mb-2">
                {service.name}
              </h3>
              
              <div class="flex items-baseline gap-2 mb-4">
                <span class="text-3xl font-medium tracking-tight">
                  {service.price}
                </span>
                <span class="text-primary-950/70 dark:text-primary-200/70 text-sm font-medium">
                  {service.periodicity}
                </span>
              </div>
              
              <p class="text-primary-950/70 dark:text-primary-200/70 mb-6">
                {service.description}
              </p>

              <ul role="list" class="space-y-3">
                {service.features.map((feature) => (
                  <li class="flex gap-3">
                    <svg
                      class="text-primary-600 dark:text-primary-400 h-5 w-5 flex-shrink-0 mt-0.5"
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      aria-hidden="true"
                    >
                      <path d="M12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22ZM11.0026 16L18.0737 8.92893L16.6595 7.51472L11.0026 13.1716L8.17421 10.3431L6.75999 11.7574L11.0026 16Z" />
                    </svg>
                    <span class="text-sm">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Custom Package Highlight -->
    <div class="bg-primary-500/10 dark:bg-primary-400/10 rounded-3xl p-8 lg:p-12">
      <div class="mx-auto max-w-4xl">
        <h3 class="text-2xl font-medium mb-4">
          {customPackage.name}
        </h3>
        <p class="text-lg text-primary-950/70 dark:text-primary-200/70 mb-8 mx-auto">
          {customPackage.description}
        </p>
        
        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3 mb-8 max-w-4xl mx-auto">
          {customPackage.benefits.map((benefit) => (
            <div class="flex gap-3 items-center">
              <svg
                class="text-primary-600 dark:text-primary-400 h-5 w-5 flex-shrink-0"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
              >
                <path d="M12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22ZM11.0026 16L18.0737 8.92893L16.6595 7.51472L11.0026 13.1716L8.17421 10.3431L6.75999 11.7574L11.0026 16Z" />
              </svg>
              <span class="text-sm font-medium">{benefit}</span>
            </div>
          ))}
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <!-- <a
            href="#"
            class="bg-primary-600 dark:bg-primary-400 hover:bg-primary-700 dark:hover:bg-primary-300 focus-visible:outline-primary-600 dark:focus-visible:outline-primary-400 dark:text-primary-950 inline-flex items-center justify-center rounded-full border border-transparent px-8 py-3 text-base font-medium text-white transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
          >
            Get Custom Quote
          </a> -->
          <a
            href="#"
            class="border border-primary-600 dark:border-primary-400 text-primary-600 dark:text-primary-400 hover:bg-primary-50 dark:hover:bg-primary-900/10 inline-flex items-center justify-center rounded-full px-8 py-3 text-base font-medium transition"
          >
            Schedule Consultation
          </a>
        </div>
      </div>
    </div>
  </div>
</section>